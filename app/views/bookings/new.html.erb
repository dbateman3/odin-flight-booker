


<%= form_for @booking do |f| %>
	<%= f.hidden_field :flight_id, value: @flight.id %> 
	
	<%= f.fields_for :passengers do |addy_form| %>
		<%= addy_form.label(:name, "Name:") %>	
		<%= addy_form.text_field :name %><br>
		<%= addy_form.label(:email, "Email:") %>
		<%= addy_form.text_field :email %><br>

		
	<% end %>
	<%= f.submit %>
<% end %>

